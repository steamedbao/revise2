perfect product

#include <stdio.h>
int perfectProd1(int num);
void perfectProd2(int num, int *prod);

int main() {
    int number, result=0;
    printf("Enter a number: \n");
    scanf("%d", &number);
    printf("perfectProd1(): %d\n", perfectProd1(number));
    perfectProd2(number, &result);
    printf("perfectProd2(): %d\n", result);
    return 0;
    }

int perfectProd1(int num) {
    int i, k, result;
    int sum=0;

    for (i=1;i<num;++i)
    {
        k = 1;
        for (k=1;k<i;++k)
        {
            if (i%k==0)
            {
                sum +=k;
            }
    }

        if (sum==i)
        {
            result *= i;
        }
    }
    return result;
    }





void perfectProd2(int num, int *prod) {
    /* Write your code here */
    int sum=0;
    int i=1, k =1;
    for (i=1;i<num;i++){
        k=1;
        for (k=1; k<i;k++){
            if ((i%k)==0)
             {
                 sum += k;
             }
            }
        if (sum == i){
            *prod *=i;
        }
    }
}


